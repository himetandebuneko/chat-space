.chat-main
  .chat-main__header
    .chat-main__header__left-box
      .chat-main__header__left-box__current-group 
        ffff
      .chat-main__header__left-box__current-member
        ssss:
        .chat-main__header__left-box__current-member-list
          ssss
    .chat-main__header__edit-btn    
      =link_to "#",class:"edit" do
        Edit
  .chat-main__message-list
    = render @messages
  .message-form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message' 
          = f.label :image, class: 'input-box__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class:input-box__image__file 
      = f.submit 'Send', class: 'submit-btn'